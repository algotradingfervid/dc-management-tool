// DashboardStatsPartialProps holds props for the dashboard stats HTMX fragment.
type DashboardStatsPartialProps struct {
	Stats          *database.DashboardStats
	RecentDCs      []database.RecentDC
	RecentActivity []database.RecentActivity
	CurrentProject *models.Project
	Range          string
	NextTransitDC  string
	NextOfficialDC string
	DCFormat       string
}

func dashItoa(i int) string {
	return strconv.Itoa(i)
}

func dashTimeAgo(t time.Time) string {
	since := time.Since(t)
	switch {
	case since < time.Minute:
		return "just now"
	case since < time.Hour:
		return fmt.Sprintf("%dm ago", int(since.Minutes()))
	case since < 24*time.Hour:
		return fmt.Sprintf("%dh ago", int(since.Hours()))
	case since < 7*24*time.Hour:
		return fmt.Sprintf("%dd ago", int(since.Hours()/24))
	default:
		return t.Format("Jan 2")
	}
}

templ DashboardStatsPartial(props DashboardStatsPartialProps) {
